@model Lesson5Excercises.Controllers.ViewModel

@{
    ViewBag.Title = "Breakfast Order";
    Layout = null;
    Html.EnableClientValidation(false);
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <h1>Breakfast order</h1>
    @using (Html.BeginForm("Index", "Exercise03", FormMethod.Post))
    {
        <p>Your name: @Html.TextBoxFor(model => Model.FullName)</p>
        <p>Room number: @Html.TextBoxFor(model => Model.RoomNumber)</p>
        <p>
            What would you like to eat for breakfast?<br /><br />
            @foreach (SelectListItem sli in Model.AllItems)
            {
                @Html.CheckBoxFor(model => sli.Selected)
                @Html.LabelFor(model => sli.Selected, sli.Text)
                <br/>
            }
        </p>
        <p>When: @Html.TextBoxFor(model => Model.Time)</p>
        <p>
            <input type="submit" value="Order" />
        </p>
    }
</body>
</html>